<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="panel" prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../css/basicscene.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Hospital.Controllers.basic.LoginControllerClass">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="700.0" prefWidth="1200.0" styleClass="basicscene"
                    VBox.vgrow="ALWAYS">
            <children>
                <AnchorPane layoutX="389.0" layoutY="232.0" prefHeight="370.0" prefWidth="424.0"
                            style="-fx-background-color: white;" styleClass="innerform">
                    <children>
                        <TextField fx:id="name" alignment="CENTER" layoutX="57.0" layoutY="102.0" prefHeight="40.0"
                                   prefWidth="261.0" promptText="NAME" styleClass="inputfield" text="administrator"/>
                        <PasswordField fx:id="password" alignment="CENTER" layoutX="57.0" layoutY="161.0"
                                       prefHeight="40.0" prefWidth="261.0" promptText="PASSWORD" styleClass="input"
                                       text="admin"/>
                        <Button fx:id="login" layoutX="56.0" layoutY="227.0" mnemonicParsing="false" prefHeight="40.0"
                                prefWidth="118.0" text="LOGIN"/>
                        <Button fx:id="help" layoutX="242.0" layoutY="227.0" mnemonicParsing="false" prefHeight="40.0"
                                prefWidth="118.0" text="HELP"/>
                        <Label fx:id="title" alignment="CENTER" layoutX="72.0" layoutY="43.0" prefHeight="40.0"
                               prefWidth="254.0" text="E-Doc hospital system" textFill="#ee0404">
                            <font>
                                <Font size="17.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <Label fx:id="message" alignment="CENTER" layoutX="395.0" layoutY="14.0" prefHeight="40.0"
                       prefWidth="411.0">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <ImageView fx:id="logo1" fitHeight="150.0" fitWidth="200.0" layoutX="58.0" layoutY="267.0"
                           pickOnBounds="true" preserveRatio="true"/>
                <ImageView fx:id="logo2" fitHeight="150.0" fitWidth="200.0" layoutX="929.0" layoutY="275.0"
                           pickOnBounds="true" preserveRatio="true"/>
                <ImageView fx:id="logo3" fitHeight="142.0" fitWidth="200.0" layoutX="501.0" layoutY="69.0"
                           pickOnBounds="true" preserveRatio="true"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
